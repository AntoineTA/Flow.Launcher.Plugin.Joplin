<UserControl x:Class="Flow.Launcher.Plugin.Joplin.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- API Token -->
        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,5,15,0">
            <TextBlock Text="Joplin API Token:" VerticalAlignment="Top"/>
            <TextBlock Text="Get your API token from Joplin > Tools > Options > Web Clipper." 
                       FontSize="11" Foreground="Gray" TextWrapping="Wrap" Margin="0,5,0,0"/>
            <TextBlock Text="This will be stored as plaintext in the user data directory, please ensure it's not publicly accessible." 
                       FontSize="11" Foreground="Gray" TextWrapping="Wrap" Margin="0,2,0,0"/>
        </StackPanel>
        <TextBox Grid.Row="0" Grid.Column="1" Name="ApiTokenTextBox" 
                 Padding="5" Margin="0,5,0,0" VerticalAlignment="Top" Width="1000" HorizontalAlignment="Left"/>

        <!-- API Port -->
        <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,20,15,0">
            <TextBlock Text="Joplin API Port:" VerticalAlignment="Top"/>
            <TextBlock Text="Port number for Joplin Web Clipper service (default is 41184)" 
                       FontSize="11" Foreground="Gray" TextWrapping="Wrap" Margin="0,5,0,0"/>
        </StackPanel>
        <TextBox Grid.Row="1" Grid.Column="1" Name="ApiPortTextBox" 
                 Padding="5" Margin="0,20,0,0" VerticalAlignment="Top" Width="150" HorizontalAlignment="Left"/>

        <!-- Default Notebook Name -->
        <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,20,15,0">
            <TextBlock Text="Default Notebook Name:" VerticalAlignment="Top"/>
            <TextBlock Text="Name of the notebook where new notes will be created. Required for proper note organization in Joplin." 
                       FontSize="11" Foreground="Gray" TextWrapping="Wrap" Margin="0,5,0,0"/>
        </StackPanel>
        <TextBox Grid.Row="2" Grid.Column="1" Name="DefaultNotebookTextBox" 
                 Padding="5" Margin="0,20,0,0" VerticalAlignment="Top" Width="150" HorizontalAlignment="Left"/>

        <!-- Save Button and Status -->
        <Button Grid.Row="3" Grid.Column="1" Name="SaveButton" Content="Save" 
                Width="80" Height="32" HorizontalAlignment="Left" 
                Margin="0,20,0,0" Click="SaveButton_Click"/>
        
        <TextBlock Grid.Row="4" Grid.Column="1" Name="StatusTextBlock" 
                   Margin="0,10,0,0" FontWeight="SemiBold"/>
    </Grid>
</UserControl>
